@using TRan.CinemaUniverse.Web.Areas.Administration.ViewModels.Movies
@model PagedList.IPagedList<MovieEditViewModel>
@using PagedList.Mvc;
@section stylelibs {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
}
@{
    ViewBag.Title = "All Movies";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Create New", "Create", "Movies")
</p>


<table class="table table-hover table-responsive">
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var movie in Model)
    {

        <tr>
            <td>@movie.Title</td>
            <td>
                <img src="@movie.ImageUrl" alt="@movie.Title" style="max-width:100px" />
            </td>
            <td>@movie.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = movie.Id })
                @Html.ActionLink("Delete", "Delete", new { id = movie.Id })

            </td>
        </tr>
    }
</table>

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("All",
        new { page }))
</div>

