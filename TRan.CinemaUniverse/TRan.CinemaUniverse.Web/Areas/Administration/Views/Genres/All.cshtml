@using TRan.CinemaUniverse.Web.Areas.Administration.ViewModels.Genres
@model PagedList.IPagedList<GenreEditViewModel>
@using PagedList.Mvc;
@section stylelibs {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
}

@{ 
    var action = ViewContext.RouteData.GetRequiredString("action").ToLower();
}
@if (action == "all")
{
    <h2>All</h2>
    <p>
        @Html.ActionLink("Create New", "Create", "Genres")
    </p>
}
else
{
    <h2>Deleted</h2>
}

<table>
    <tr>
        <th>Genre</th>
        <th></th>
    </tr>
    @foreach (var genre in Model)
    {
        
        <tr>
            <td>
                @genre.Name
            </td>
            <td>
                @if (action == "all")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = genre.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = genre.Id })
                }
            </td>
        </tr>
    }
</table>

<div class="text-center">
    @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

    @Html.PagedListPager(Model, page => Url.Action("All",
    new { page }))
</div>

